<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.4.xsd">

  <selection name="product.color.selection">
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="gray">Gray</option>
    <option value="red">Red</option>
    <option value="green">Green</option>
    <option value="blue">Blue</option>
    <option value="yellow">Yellow</option>
    <option value="chocolate">Chocolate</option>
    <option value="orange">Orange</option>
    <option value="purple">Purple</option>
  </selection>

  <grid name="product-grid" title="Products" model="com.axelor.sale.db.Product">
    <field name="name" />
    <field name="category" />
    <field name="color" selection="product.color.selection" />
  </grid>

  <form name="product-form" title="Product" model="com.axelor.sale.db.Product">
    <panel title="Overview">
      <field name="code" />
      <field name="name" />
      <field name="color" selection="product.color.selection" />
      <field name="category" />
    </panel>
  </form>

</object-views>
